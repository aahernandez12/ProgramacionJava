package matrices;

public class ejercicio1 {

	public static void main(String[] args) {
		// Por medio de 3 matrices (3x4) aleatorias haga distintas operaciones
		
		int matriz1[][] = new int [3][4];
		for(int i = 0; i < 3; i++)
		{
			for(int j = 0; j < 4; j++)
			{
				matriz1[i][j] = (int) Math.ceil(Math.random()*100);
				if(i % 2 != 0 && j % 2 != 0)
				{
					j--;
				}
			}
		}
		
		int matriz2[][] = new int [3][4];
		for(int m = 0; m < 3; m++)
		{
			for(int n = 0; n < 4; n++)
			{
				matriz2[m][n] = (int) Math.ceil(Math.random()*100);
			}
		}
		
		// Mostar matrices

		for(int i = 0; i < 3; i++)
		{
			for(int j = 0; j < 4; j++)
			{
				System.out.print(matriz1[i][j] + " ");
			}
			System.out.println();
		}
		System.out.println();
		
		for(int m = 0; m < 3; m++)
		{
			for(int n = 0; n < 4; n++)
			{
				System.out.print(matriz2[m][n] + " ");
			}
			System.out.println();
		}
		// Calcular la 3a matriz
		
		//int matriz3[][] = new int [3][3];
		
		//for(int r = 0; r < 3 ; r++)
		{
			//for(int s = 0; s < 3; s++)
			{
			//	matriz3[r][s] = (matriz1[i][j] + matriz2[m][n]);
			}
		}

	}

}
