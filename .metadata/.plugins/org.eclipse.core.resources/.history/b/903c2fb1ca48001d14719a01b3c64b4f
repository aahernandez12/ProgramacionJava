package ciclosFor;

public class ejercicio4 {

	public static void main(String[] args) {
		// Sumatoria  de las iteraciones dede 0 hasta un numero definido y al resultado de la suma realizar otras operaciones
		int numDefinido = 3, sumaOperandos = 0;
		
		for(int conta = 0; conta <= numDefinido; conta++)
		{
			sumaOperandos = sumaOperandos + conta;
		}
		System.out.println(sumaOperandos);
		System.out.println("La raÃ­z cuadrada de "+sumaOperandos+" es:"+Math.sqrt(sumaOperandos));
		System.out.println(sumaOperandos);
		System.out.println(sumaOperandos);
	}
}