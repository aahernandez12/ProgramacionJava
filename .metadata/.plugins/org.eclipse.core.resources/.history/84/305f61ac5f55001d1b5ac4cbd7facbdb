package matrices;

public class ejercicio3 {

	public static void main(String[] args) {
		// En una matriz aleatoria de 3x4 imprimir algunas filas y columnas
		
		int matriz[][] = new int [3][4];
		
		for(int i = 0; i < 3; i++)
		{
			for(int j = 0; j < 4; j++)
			{
				matriz[i][j] = (int) Math.ceil(Math.random()*100);
			}
		}
		
		// Mostrar matriz
		for(int i = 0; i < 3; i++)
		{
			for(int j = 0; j < 4; j++)
			{
				System.out.print(matriz[i][j] + " ");
			}
		}
		System.out.println(" ");
	}
}
